@model IEnumerable<BookStore.Models.Sach>
@if (Model != null&&Model.Count()>0)
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Tên sách</th>
                <th>Đơn giá</th>
                <th>Ảnh bìa</th>
                <th>Chủ đề</th>
                <th>Nhà xuất bản</th>
                <th></th>
            </tr>
        </thead>
        <tbody class="sach" >
            @foreach (var item in Model)
            {
                <tr >
                    <td width="350">@item.TenSach</td>
                    <td>@Html.FormatValue(item.Dongia, "{0:#,##0} đồng")</td>
                    <td><img src="~/Bia_sach/@item.AnhBia" width="100" alt="Alternate Text" /></td>
                    <td>@item.ChuDe.Tenchude</td>
                    <td>@item.NhaXuatBan.TenNXB</td>
                    <td>
                        <a href="@Url.Action("CapNhat","Admin",new {id=item.MaSach })" class="btn btn-warning"><span class="glyphicon glyphicon-edit"></span> Cập nhật</a>
                        <a onclick="return confirm('Bạn có muốn xoá không !');" href="@Url.Action("Xoa","Admin",new {id=item.MaSach })" class="btn btn-danger"><span class="glyphicon glyphicon-trash"></span> Xoá</a>
                    </td>
                </tr>
            }



        </tbody>
    </table>
}
else
{
    <br /><br />
    <h2 class="text-center">Không có kết quả</h2>
}
@section scripts{
    <script>
        $(".sach button").click(function () {
            console.log($(this).data("id"));
        });
    </script>    
}